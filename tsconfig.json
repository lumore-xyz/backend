{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "services/socketService copy 2.ts"]
}
